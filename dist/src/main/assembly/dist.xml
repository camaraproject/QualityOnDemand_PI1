<assembly
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <fileSets>
    <fileSet>
      <directory>${root}/core/target</directory>
      <fileMode>0644</fileMode>
      <includes>
        <include>senf-core-${project.version}.jar</include>
      </includes>
      <outputDirectory>lib/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${root}/datatypes/target</directory>
      <fileMode>0644</fileMode>
      <includes>
        <include>datatypes-${project.version}.jar</include>
      </includes>
      <outputDirectory>lib/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/bash</directory>
      <fileMode>0755</fileMode>
      <includes>
        <include>*.sh</include>
      </includes>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>
        ${root}/plugins/storage/target
      </directory>
      <includes>
        <include>storage-plugin-${project.version}.jar</include>
      </includes>
      <fileMode>0644</fileMode>
      <outputDirectory>lib/</outputDirectory>
    </fileSet>
  </fileSets>
  <formats>
    <format>dir</format>
  </formats>
  <id>dist</id>
</assembly>
